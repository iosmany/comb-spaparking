
<div class="content">
    <form asp-action="Deactivate" asp-controller="ParkingPermit" method="post">
		@Html.AntiForgeryToken()
		<input type="hidden" name="id" value="@Model" />
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        Deactivate
                    </div>
                    <div class="card-body">
                        <p>Are you sure you want to deactivate this parking permit?</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-secondary btn-sm" asp-action="Details" asp-controller="ParkingPermit" asp-route-id="@Model">Cancel</a>
                        <button type="submit" class="btn btn-danger btn-sm">Deactivate</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>